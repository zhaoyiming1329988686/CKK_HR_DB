@model List<engage_major_release>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>申请职位页面</title>

    <link href="~/Scripts/css/table.css" rel="stylesheet" />
    <link href="~/Scripts/css/cwcalendar.css" rel="stylesheet" />
    <script src="~/Scripts/javascript/comm/comm.js"></script>
    <script src="~/Scripts/javascript/comm/list.js"></script>
    <script src="~/Scripts/javascript/calendar-ch.js"></script>
    <script src="~/Scripts/jquery-1.7.2.js"></script>
    <script src="~/Scripts/javascript/locate.js"></script>
    <script src="~/Scripts/javascript/select.js"></script>

    <script type="text/javascript">
		function search(id){
		 // document.fm.submit();
 		window.location.href="/HR_Fist/recruit/recruitAction!register?id="+id;
		}





    </script>
</head>
<body>
    <form id="recruitAction!toRegister" name="fm" action="/resume_register/IndexDengji" method="post" enctype="multipart/form-data">
        <input type="hidden" name="emajorRelease.mreId" value="531" />
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布查询--详细  </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="确认申请" @*onclick="search('531')"*@ class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
@foreach (engage_major_release item in Model)
{
  
            <tr>
                <td class="TD_STYLE1" width="11%">
                    I级机构

                </td>
                <td width="14%" class="TD_STYLE2">
                    <input type="hidden" name="emajorRelease.firstKindName2" value="@item.first_kind_name" />
                    <select name="emajorRelease.firstKindName">
                        <option value="@item.first_kind_id">@item.first_kind_name</option>
                    </select>
                </td>
                <td width="11%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="14%" class="TD_STYLE2">
                    <input type="hidden" name="emajorRelease.secondKindName2" value="@item.second_kind_name" />
                    <select name="emajorRelease.secondKindName">
                        <option value="@item.second_kind_id">@item.second_kind_name</option>
                    </select>
                </td>
                <td width="11%" class="TD_STYLE1">
                    III级机构
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="emajorRelease.thirdKindId2" value="@item.third_kind_name" />
                    <select name="emajorRelease.thirdKindId">
                        <option value="@item.third_kind_id">@item.third_kind_name</option>
                    </select>
                </td>
                <td width="11%" class="TD_STYLE1">
                    招聘类型
                </td>
                <td class="TD_STYLE2" colspan="2">
                    <select name="emajorRelease.engageType" class="SELECT_STYLE1">
                        <option value="@item.engage_type">@item.engage_type</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位分类
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="emajorRelease.majorKindName2" value="@item.major_kind_name" />
                    <select name="emajorRelease.majorKindName">
                        <option value="@item.major_kind_id">@item.major_kind_name</option>
                    </select>
                </td>
                <td class="TD_STYLE1">
                    职位名称
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="emajorRelease.majorName2" value="@item.major_name" />
                    <select name="emajorRelease.majorName">
                        <option value="@item.major_id">@item.major_name</option>
                    </select>
                </td>
                <td class="TD_STYLE1">
                    招聘人数
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="emajorRelease.humanAmount" value="@item.human_amount" class="INPUT_STYLE2">

                </td>
                <td class="TD_STYLE1">
                    截止日期
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="emajorRelease.deadline" readonly
                           class="INPUT_STYLE2" value="@item.deadline">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    登记人
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="emajorRelease.register" value="@item.register " class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    登记时间
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="emajorRelease.registTime"
                           value="@item.regist_time" readonly="readonly"
                           class="INPUT_STYLE2">

                </td>

                <td>&nbsp; </td>
                <td>&nbsp; </td>
                <td>&nbsp; </td>
                <td>&nbsp; </td>

            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位描述
                </td>
                <td class="TD_STYLE2" colspan="8">
                    <textarea name="emajorRelease.majorDescribe" rows="4" cols="100%" class="TEXTAREA_STYLE1" readonly="readonly">@item.major_describe</textarea>
                </td>

            </tr>
            <tr>
                <td class="TD_STYLE1">
                    招聘要求
                </td>
                <td class="TD_STYLE2" colspan="8">
                    <textarea name="emajorRelease.engageRequired" rows="4" cols="100%" class="TEXTAREA_STYLE1" readonly="readonly">@item.engage_required</textarea>
                </td>

            </tr>
}
        </table>
    </form>
</body>
</html>
